<!-- blog posts -->
<br />
<%= link_to 'Create Blog', new_blog_path, class: 'btn btn-success', style: 'display: flex;  align-items: center; justify-content: center; margin-left: 40%; margin-right: 40%;' %>
<br>
<br>
<div class="blog-content">
  <div class="container">
    <div class="blog-discription">
          <% @blogs.each do |blog| %>
          <div class="row article">
            <div class="col-md-6 ">
                 <%= image_tag blog.image.url(:large), class: 'article-image', style: 'width: 90%;' %>
            </div>
            <div class="col-md-6 ">
              <div class="article-info">
                <h2><%= blog.title %></h2>

                <ul class="list-inline">
                  <li><a href="#"><i class="fa fa-user"></i>&nbsp;<% if !blog.user.blank? %>
                    <%= blog.user.username %>
                  <%end%>
                  </a>
                  </li>
                  <li><a href="#"><i class="fa fa-calendar"></i>&nbsp;<%= time_ago_in_words(blog.created_at) %></a></li>
                  <li><a href="#"><i class="fa fa-refresh"></i>&nbsp;<%= time_ago_in_words(blog.updated_at) %></a></li>
                  <% if current_user && current_user == blog.user || current_user.try(:admin?) %>
                  <li><i class="fa fa-pencil-square-o"></i>&nbsp;<%= link_to 'Edit', edit_blog_path(blog) %></li>
                  <li><<i class="fa fa-trash"></i>&nbsp;<%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                  <% end %>
                </ul>
                <lead><p><%= raw(blog.content.slice(0, 100)) %></p></lead>
                <div class="learn"><%= link_to 'Learn More about this post now!', blog %>&nbsp;<i class="fa fa-long-arrow-right"></i></div>
              </div>
            </div>
          </div>
          <br>
          <br>
          <br>
          <br>
          <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
